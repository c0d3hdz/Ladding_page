---
import { projects } from '../data/projects';
---

    <div class="gallery">
    {projects.map((project) => (
        <a href={`/proyectos/${project.slug}`} class="project-card">
        <img src={project.image} alt={project.title} />
        <h2>{project.title}</h2>
        <p>{project.description}</p>
        </a>
    ))}
    </div>

    <style>
    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin: 20px auto;
        max-width: 1200px;
    }
    .project-card {
        text-decoration: none;
        color: inherit;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
    }
    .project-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        margin-bottom: 10px;
    }
    </style>
