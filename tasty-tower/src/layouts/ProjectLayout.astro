---
const { title, description, image } = Astro.props;
import Layout from '../layouts/Layout.astro';
---
<Layout title="Index">
    <article>
        <h1>{title}</h1>
        <img src={image} alt={title} />
        <p>{description}</p>

        <slot />
    </article>
</Layout>



    <style>
    article {
        margin: 0 auto;
        padding: 20px;
        max-width: 800px;
        text-align: center;
    }
    img {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
</style>
